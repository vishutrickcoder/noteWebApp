<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
        <form action="/create" method="post">
            <input type="text" name="title" class=" block outline-none rounded-md w-full px-5 py-2 bg-zinc-800" placeholder="Title Goes here ....">
            <textarea name="details" class=" mt-2 outline-none rounded-md w-full px-5 resize-none py-2 bg-zinc-800" placeholder="Write task details here "></textarea>
            <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
        </form>
    </div>
    <div class="tasks flex gap-4 flex-wrap m-4">
        <% if (files.length > 0) { %>
            <% files.forEach(function(val){ %>
                <div class=" task min-w-72 px-3 py-4 bg-zinc-800 p-10 rounded-md ">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val%> </h1>
                    <div class="flex justify-between items-center mt-4 w-full">
                    <a class="text-blue-500 inline-block " href="/file/<%= val%>">Read More ..</a>
                    <a class="text-zinc-600 inline-block " href="/edit/<%= val%>"> edit filename</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="text-zinc-500">No tasks yet</h3>
        <% } %>

    </div>
  </div>
</body>
</html>